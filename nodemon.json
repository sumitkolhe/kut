{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node --require tsconfig-paths/register --require ts-node/register"
  },
  "watch": ["server/", "nuxt.config.js", "tsconfig.json", ".env"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
